<script type="text/javascript">

    var confirmdel = function (id) {

        $("#hid").val(id);
       
        
    }

    var del = function (id) {

        //var cID = $("#hid").val();

        $.ajax({
            url: "../course/delete",
            type: "POST",
            data: { id: id },
            success: function (result) {
                alert('this will be deleted');
                location.reload();
            },
            error: function (errormessage) {
                alert("يوجد خطأ");
            }
        });
    }


</script>

<script>
    $('#edit').click(function () {
